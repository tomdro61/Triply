# ===========================================
# Triply Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development  # development | staging | production

# ===========================================
# Supabase
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# Reservations Lab
# ===========================================
RESLAB_API_KEY=your_reslab_api_key
RESLAB_API_DOMAIN=triplypro.com
RESLAB_API_URL=https://api.reservationslab.com

# ===========================================
# Stripe
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Mapbox
# ===========================================
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token

# ===========================================
# Payload CMS (Blog)
# ===========================================
PAYLOAD_SECRET=your-secret-key-at-least-32-characters
# DATABASE_URI uses the same Supabase PostgreSQL connection
# Format: postgres://postgres.[ref]:[pass]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URI=postgres://your_supabase_connection_string

# ===========================================
# Sanity CMS (DEPRECATED - using Payload now)
# ===========================================
# NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
# NEXT_PUBLIC_SANITY_DATASET=development
# SANITY_API_TOKEN=your_sanity_api_token

# ===========================================
# Resend (Email)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Sentry (Error Tracking)
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_xxx
SENTRY_ORG=triply
SENTRY_PROJECT=triply-web
